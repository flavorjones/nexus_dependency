# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :gemspec

Hoe.spec 'nexus_dependency' do
  developer 'Mike Dalessio', 'mike.dalessio@gmail.com'
  self.readme_file = 'README.rdoc'
  self.history_file = 'History.rdoc'
  self.testlib = :rspec

  self.extra_deps << ["rake", ">=0.8.7"]
  self.extra_dev_deps << ["rspec", "~>1"]
end

